@model IEnumerable<Order>
@{
    ViewData["Title"] = "Orders";
}
<h1>All Orders</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Order Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerName</td>
                <td>@order.Product.ProductName</td>
                <td>@order.Quantity</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-success">Place Order</a>
